<!-- views/birthday.ejs -->
<%- include('Partials/header') %>
<%- include('Partials/main_nav') %>

<img class = "birthdayBackground" src ="https://plus.unsplash.com/premium_photo-1664304077938-d9f65c41583c?q=80&w=2940&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D">
<div class="container mt-4">
  <link rel = 'stylesheet' href='/stylesheets/style.css' />
  <h1>Birthday List</h1>
  <a href="/birthday/add" class="btn btn-primary" role="button">Add Birthday</a>
  
  <table class="table table-bordered mt-3">
    <thead>
      <tr>
        <th>Date of Birth</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% birthdayItems.forEach(birthday => { %> 
        <tr>
          <td><%= birthday.DOB %></td>
          <td><%= birthday.firstName %></td>
          <td><%= birthday.lastName %></td>
          <td>
            <!-- Edit button -->
            <a href="/birthday/edit/<%= birthday._id %>" class="btn btn-primary">Edit</a>
            
            <!-- Delete button -->
            <a href="/birthday/delete/<%= birthday._id %>" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?')">Delete</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<%- include('Partials/footer') %>
