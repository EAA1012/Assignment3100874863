<!-- views/birthday.ejs -->
<%- include('Partials/header') %>
<%- include('Partials/main_nav') %>

<div class="container mt-4">
  <h1>birthday List</h1>
  <a href="/birthday/add" class="btn btn-primary" role="button">Add Birthday</a>
  
  <table class="table table-bordered mt-3">
    <thead>
      <tr>
        <th>Date of Birth</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% birthdayItems.forEach(birthday => { %> 
        <tr>
          <td><%= birthday.DOB %></td>
          <td><%= birthday.firstName %></td>
          <td><%= birthday.lastName %></td>
          <td>
            <!-- Edit button -->
            <a href="/birthday/edit/<%= birthday._id %>" class="btn btn-primary">Edit</a>
            
            <!-- Delete button -->
            <a href="/birthday/delete/<%= birthday._id %>" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?')">Delete</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<%- include('Partials/footer') %>
